def calculatePolygons (startx starty endx endy radius : Float) : List (List (Float × Float)) := Id.run do
  let pi : Float := 3.141592653589793
  let sl := (2.0 * radius) * Float.tan (pi / 6.0)
  let p := sl * 0.5
  let b := sl * Float.cos (pi / 6.0)
  let w := b * 2.0
  let h := 2.0 * sl
  let mut sx := startx - w
  let mut sy := starty - h
  let ex := endx + w
  let ey := endy + h
  let origx := sx
  let _origy := sy
  let xoffset := b
  let yoffset := 3.0 * p
  let mut polygons : Array (List (Float × Float)) := #[]
  let mut row : Nat := 1
  let mut _counter : Nat := 0
  while decide (sy < ey) do
    let sxStart := if row % 2 == 0 then origx + xoffset else origx
    let mut cx := sxStart
    while decide (cx < ex) do
      let p1x := cx
      let p1y := sy + p
      let p2x := cx
      let p2y := sy + (3.0 * p)
      let p3x := cx + b
      let p3y := sy + h
      let p4x := cx + w
      let p4y := sy + (3.0 * p)
      let p5x := cx + w
      let p5y := sy + p
      let p6x := cx + b
      let p6y := sy
      let poly : List (Float × Float) :=
        [ (p1x, p1y)
        , (p2x, p2y)
        , (p3x, p3y)
        , (p4x, p4y)
        , (p5x, p5y)
        , (p6x, p6y)
        , (p1x, p1y)
        ]
      polygons := polygons.push poly
      _counter := _counter + 1
      cx := cx + w
    sy := sy + yoffset
    row := row + 1
  return polygons.toList

